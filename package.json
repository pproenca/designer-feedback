{
  "name": "designer-feedback",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "gen:icons": "npx tsx scripts/render-icons.ts",
    "gen:promo": "npx tsx scripts/render-promo.ts",
    "package": "npm run pack",
    "release": "npm version patch --no-git-tag-version && node scripts/sync-manifest-version.cjs && npm run package",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "pack": "npm run build && cd dist && zip -r designer-feedback.zip . -x \"*.DS_Store\" -x \"designer-feedback.zip\"",
    "pack:crx": "node scripts/pack-crx.mjs"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "lucide-react": "^0.563.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@playwright/test": "^1.58.0",
    "@types/chrome": "^0.0.287",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "puppeteer": "^24.36.0",
    "sass": "^1.83.0",
    "sharp": "^0.34.5",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  }
}
