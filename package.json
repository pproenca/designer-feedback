{
  "name": "designer-feedback",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "dev": "wxt",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:analyze": "npm run build && open .output/chrome-mv3/stats.html",
    "gen:icons": "npx tsx scripts/render-icons.ts",
    "gen:promo": "npx tsx scripts/render-promo.ts",
    "zip": "wxt zip",
    "release": "npm version patch --no-git-tag-version && npm run zip",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "typecheck": "wxt prepare && tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "framer-motion": "^11.18.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.19.0",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@wxt-dev/module-react": "^1.1.3",
    "eslint": "^9.19.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.12.0",
    "jsdom": "^27.4.0",
    "lefthook": "^2.0.16",
    "puppeteer": "^24.36.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wxt": "^0.19.0"
  }
}
