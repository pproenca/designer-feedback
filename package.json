{
  "name": "designer-feedback",
  "version": "1.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "dev": "wxt",
    "dev:debug": "wxt --mode debug",
    "build": "wxt build",
    "build:staging": "wxt build --mode staging",
    "build:production": "wxt build --mode production",
    "build:firefox": "wxt build -b firefox",
    "build:analyze": "npm run build && open .output/chrome-mv3/stats.html",
    "gen:icons": "npx tsx scripts/render-icons.ts",
    "gen:promo": "npx tsx scripts/render-promo.ts",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "pack": "npm run zip",
    "release": "npm version patch --no-git-tag-version && npm run zip",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "VITE_DF_E2E=1 wxt build && playwright test",
    "test:e2e:ci": "playwright test",
    "typecheck": "wxt prepare && tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "update-server": "npx --yes extension-update-testing-tool",
    "submit": "wxt submit",
    "submit:chrome": "wxt submit --chrome-zip .output/*.zip",
    "submit:firefox": "wxt submit --firefox-zip .output/*-firefox.zip --firefox-sources-zip .output/*-sources.zip",
    "submit:dry-run": "wxt submit --dry-run"
  },
  "dependencies": {
    "framer-motion": "^12.29.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.19.0",
    "@playwright/test": "^1.58.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@wxt-dev/module-react": "^1.1.3",
    "eslint": "^9.19.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^17.2.0",
    "jsdom": "^27.4.0",
    "knip": "^5.82.1",
    "lefthook": "^2.0.16",
    "puppeteer": "^24.36.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18",
    "wxt": "^0.20.13"
  }
}
