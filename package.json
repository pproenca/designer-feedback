{
  "name": "designer-feedback",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "lefthook install",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && open dist/stats.html",
    "gen:icons": "npx tsx scripts/render-icons.ts",
    "gen:promo": "npx tsx scripts/render-promo.ts",
    "package": "npm run pack",
    "release": "npm version patch --no-git-tag-version && node scripts/sync-manifest-version.cjs && npm run package",
    "preview": "vite preview",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "pack": "npm run build && cd dist && zip -r designer-feedback.zip . -x \"*.DS_Store\" -x \"designer-feedback.zip\"",
    "pack:crx": "node scripts/pack-crx.mjs"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@eslint/js": "^9.19.0",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/chrome": "^0.0.287",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.19.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-playwright": "^2.5.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.12.0",
    "lefthook": "^2.0.16",
    "jsdom": "^27.4.0",
    "puppeteer": "^24.36.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "sass": "^1.83.0",
    "sharp": "^0.34.5",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  }
}
